<div class="box">
  <% for (var i = 0; i < newListItems.length; i++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= newListItems[i] %></p>
  </div>
  <% } %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="todoInput"
      id="todoInput"
      placeholder="New Task"
      autocomplete="off"
    />
    <button type="submit">+</button>
  </form>
</div>
